vcc--------2
gnd--------6
data/pin----16
led(+ve)------18
led(-ve)------20(gnd)



import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BOARD)

pir_pin = 16
led=18
GPIO.setup(pir_pin, GPIO.IN)

while True:
    if GPIO.input(pir_pin):
        GPIO.output(led, 1)
        print("Motion detected!")
    else:
        GPIO.output(led, 0)
    time.sleep(0.5)
