import RPi.GPIO as GPIO
import time

sensor = 16  # change this to the pin connected to the LDR
GPIO.setmode(GPIO.BOARD)
GPIO.setup(pin, GPIO.IN)

try:
    while True:
        print(GPIO.input(pin))
        time.sleep(0.5)  # add a delay to prevent the program from running too fast
except KeyboardInterrupt:
    GPIO.cleanup()
